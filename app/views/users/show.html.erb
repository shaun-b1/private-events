<h1><%= @user.name %></h1>

<h2>User Events</h2>
<% if @user.created_events.empty? %>
  <%= "This user has no events! Why don't you create some?" %>
<% else %>
  <table>
    <tr>
      <th>Event Name</th>
      <th>Location</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <% @user.created_events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.location %></td>
        <td><%= event.event_time %></td>
        <td><%= link_to "Show Event Details", event_path(event) %></td>
        <td><%= link_to "Edit Event", edit_event_path(event) %></td>
        <td><%= link_to "Delete Event", event_path(event), method: :delete, data: {confirm: "Are you sure"} %></td>
      </tr>
    <% end %>
  </table>
<% end %>

<%= link_to "New Event", new_event_path %>
<%= link_to "Homepage", root_path %>
